<div class="container">
  <div class="row post">
    <p id="notice"><%= notice %></p>

    <div class="col-md-7">
      <div class="cover">
        <%= image_tag('afp.jpg', class: 'img-responsive') %>
        <!-- <img src="http://placehold.it/650x350" alt="" class="img-responsive" /> -->
      </div>
      <div class="desc">
        <%= @post.content %>
      </div>
      <!--DISQUs -->
      <div id="disqus_thread"></div>
      <script type="text/javascript">
    /* * * CONFIGURATION VARIABLES * * */
    var disqus_shortname = 'voiceslk';
    
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
    </div>

    <div class="col-md-5">
      <div class="title">
        <h1 class="medium-text"><%= @post.title %></h1>
      </div>
      <div class="mps">
        <p>
          <%= image_tag('profile-img.jpg', class: 'img-circle small-thumb') %>
          Ravi Karunanayake
        </p>
        <p>
          <%= image_tag('profile-img.jpg', class: 'img-circle small-thumb') %>
          Anura Kumara Disanayaka
        </p>
      </div>
      <div class="vote">
        <%= link_to upvote_post_path(@post), method: :patch, class: 'btn btn-primary btn-lg btn-line btn-red' do %>
          <i class="fa fa-thumbs-up fa-fw fa-lg"></i>Support this Cause
        <% end %>
        <%= link_to upvote_post_path(@post), method: :patch, class: 'btn btn-primary btn-lg btn-line btn-red' do %>
          <i class="fa fa-thumbs-down fa-fw fa-lg"></i>
        <% end %>
        <!-- <div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button"></div> -->
      </div>
    </div>

  </div>

